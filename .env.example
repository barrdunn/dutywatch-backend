# --- iCloud CalDAV ---
ICLOUD_USER=""
ICLOUD_APP_PW=""
CALDAV_URL="https://caldav.icloud.com/"

# --- APNs (optional; fill if youâ€™ll push to iOS) ---
APNS_TEAM_ID="YOUR_TEAM_ID"
APNS_KEY_ID="YOUR_KEY_ID"
APNS_KEY_PEM="./AuthKey_XXXXXX.p8"
APNS_BUNDLE_ID="com.yourcompany.DutyWatch"
# dev | prod
APNS_ENV="dev"

# --- Twilio (optional; used only if you call/sms) ---
TWILIO_SID=""
TWILIO_AUTH=""
TWILIO_FROM=""

# --- App runtime ---
TIMEZONE="America/Chicago"
# how often to poll calendar & fire scheduled items (minutes)
POLL_MINUTES=1
# keep this a plain number; code parses it as int
LOOKAHEAD_HOURS=24

# restrict to calendars by name (case-insensitive). Empty = all.
CALENDAR_NAME_FILTER="Work"

# public base URL if you expose callbacks (optional)
PUBLIC_BASE_URL=""

# optional scheduling knobs
SCHEDULE_LOOKAHEAD_HOURS=336
REPORT_LEAD_MINUTES=60
CHECKOUT_PAD_MINUTES=15
NOTIFY_BEFORE_REPORT_MINUTES=15

# simulation toggles (0/1)
SIMULATE_PUSH=1
SIMULATE_CALL=1

# LLM (optional)
OPENAI_API_KEY=""
LLM_MODEL="gpt-4o-mini"
